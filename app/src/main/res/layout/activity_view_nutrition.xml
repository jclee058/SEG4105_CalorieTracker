<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) IMAGE DE FOND (comme les autres Ã©crans) -->
    <ImageView
        android:id="@+id/bgImageMeal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_meal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2) VOILE SOMBRE PAR-DESSUS L'IMAGE -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3) CARTE "EDIT" AU CENTRE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditFood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TITRE -->
            <TextView
                android:id="@+id/tvEditTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- ITEM NAME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Item Name"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sourdough bread"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="textCapWords"
                android:paddingBottom="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <!-- ITEM WEIGHT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Item Weight (grams)"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/etItemWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="100"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:paddingBottom="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- BOUTONS SAVE / CANCEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSaveFood"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:background="@drawable/btn_save" />

                <Button
                    android:id="@+id/btnCancelFood"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Cancel"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:background="@drawable/btn_cancel" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
